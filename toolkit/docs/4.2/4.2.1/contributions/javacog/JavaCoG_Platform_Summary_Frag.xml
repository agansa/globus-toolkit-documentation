<itemizedlist>
  <listitem>
    <simpara>Linux (Red Hat 7.3)</simpara>
  </listitem>
  <listitem>
    <simpara>Windows 2000 and XP</simpara>
  </listitem>
  <listitem>
    <simpara>Solaris 9</simpara>
  </listitem>
</itemizedlist>
