  <title>GT &shortversion; Replica Location Service (RLS)</title>
  <titleabbrev>Replica Location Service (RLS)</titleabbrev>
  <xi:include xmlns:xi="http://www.w3.org/2001/XInclude" href="RLS_Overview_Brief_Frag.xml"
    xpointer="xpointer(/section/*)"/>
