cd /tmp
if [! -f run_1st_as_myproxy]; then
   wget http://www-unix.mcs.anl.gov/~blau/run_1st_as_myproxy
fi
if [! -f run_2nd_as_root]; then
   wget http://www-unix.mcs.anl.gov/~blau/run_2nd_as_root
fi
if [! -f run_3rd_as_myproxy]; then
   wget http://www-unix.mcs.anl.gov/~blau/run_3rd_as_myproxy
fi

sudo -u myproxy perl run_1st_as_myproxy $1
perl run_2nd_as_root
sudo -u myproxy perl run_3rd_as_myproxy $1
